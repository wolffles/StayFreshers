<%= form_for ([@multiple_choice.test_set,multiple_choice]) do |f| %>
  <div class="form-group">
    <%= f.label :question %>
      <%= f.text_field :question, class: 'form-control', placeholder: "Enter test_set name" %>

  </div>
  <div class="form-group">
    <%= f.label :correct_answer %>
    <%= f.text_area :correct_answer, rows: 2, class: 'form-control', placeholder: "Enter subject or description" %>
  </div>
  <div class="form-group">
    <%= f.label :a %>
    <%= f.text_area :a, rows: 2, class: 'form-control', placeholder: "Enter 'a' choice" %>
  </div>
  <div class="form-group">
    <%= f.label :b %>
    <%= f.text_area :b, rows: 2, class: 'form-control', placeholder: "Enter 'b' choice" %>
  </div>
  <div class="form-group">
    <%= f.label :c %>
    <%= f.text_area :c, rows: 2, class: 'form-control', placeholder: "Enter 'c' choice" %>
  </div>
  <div class="form-group">
    <%= f.label :d %>
    <%= f.text_area :d, rows: 2, class: 'form-control', placeholder: "Enter 'd' choice" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
  <% end %>
