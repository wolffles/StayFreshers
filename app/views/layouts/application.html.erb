<!DOCTYPE html>
<html>
  <head>
    <title>StayFreshers</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <!-- <div class="pull-left" href="home">
        <%= image_tag("sflogo_nav.jpg") %>
      </div> -->

      <a class="navbar-brand" href="#">StayFreshers</a>
      <div class="pull-right user-info">
        <% if user_signed_in? %>
          <%= "#{current_user.email}" %> -
          <%= link_to "Account", account_path %> - <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
        <% else %>
        <button class="btn btn-primary">
          <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link' %>
        </button>
        <button class="btn btn-primary">
          <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link' %>
        </button>
        <% end %>
      </div>
    </nav>

    <div class="flash">
      <% if flash[:notice] %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:notice] %>
        </div>
      <% elsif flash.now[:alert] %>
        <div class="alert alert-primary">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash.now[:alert] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-primary">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:alert] %>
        </div>
      <% end %>
    </div>

    <%= yield %>
  </div>
</html>
